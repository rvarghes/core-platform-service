			<!-- url>https://raw.github.com/rvarghes/mvn-repo/master</url-->
			<url>https://raw.githubusercontent.com/rvarghes/mvn-repo/master</url>
			<snapshots>
				<enabled>false</enabled>
				<updatePolicy>always</updatePolicy>
			</snapshots>
		</repository>
		<repository>
			<id>rvarghes-build</id>
			<!-- url>https://raw.github.com/rvarghes/mvn-repo/master</url-->
